<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SessaoAprovacao" >

    <TextView
        android:id="@+id/nome_SessaoAprovacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Nome"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/descricao_SessaoAprovacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nome_SessaoAprovacao"
        android:layout_alignRight="@+id/nome_SessaoAprovacao"
        android:layout_below="@+id/nome_SessaoAprovacao"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Descrição"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/dtInicial_SessaoAprovacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descricao_SessaoAprovacao"
        android:layout_alignRight="@+id/descricao_SessaoAprovacao"
        android:layout_below="@+id/descricao_SessaoAprovacao"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Data Inicial"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/dtFinal_SessaoAprovacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dtInicial_SessaoAprovacao"
        android:layout_alignRight="@+id/dtInicial_SessaoAprovacao"
        android:layout_below="@+id/dtInicial_SessaoAprovacao"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Data Final"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/btnYes_SessaoAprovacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dtFinal_SessaoAprovacao"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="87dp"
        android:src="@drawable/aprovacao_yes" />

    <ImageView
        android:id="@+id/btnNo_SessaoAprovacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnYes_SessaoAprovacao"
        android:layout_marginLeft="54dp"
        android:layout_toRightOf="@+id/btnYes_SessaoAprovacao"
        android:src="@drawable/aprovacao_no" />

</RelativeLayout>